<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/homebackgroundland"
    android:padding="16dp">

    <!-- Columna Izquierda: Imagen + Texto -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgSupport"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/icsoportetec"
            android:contentDescription="Support"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/txtSupportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOPORTE TECNICO"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

    <!-- Columna Derecha: Botones -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <Button
            android:id="@+id/btnWhatsApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/colorAccent"
            android:paddingVertical="16dp"
            android:text="Abrir WhatsApp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar Email"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingVertical="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>

