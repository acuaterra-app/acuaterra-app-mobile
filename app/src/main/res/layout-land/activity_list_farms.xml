<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="30dp"

    android:orientation="horizontal"
    android:background="@drawable/backgroundapp"
    android:padding="0dp">

    <!-- Sección de gestión de granjas -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="60dp"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de granjas"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/koulen"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <!-- Barra de búsqueda y botón -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/editTextSearchFarm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Buscar granja por nombre"
                android:padding="10dp"
                android:background="@color/colorBackground"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/buttonSortByDate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/icbajar"
                android:contentDescription="Ordenar por fecha"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewFarms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Cargando datos..."
            android:textSize="16sp"
            android:visibility="gone"/>

        <!-- Lista de granjas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFarms"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Barra de navegación lateral -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:background="@color/white"
        android:elevation="6dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <!-- Botón 1 -->
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/navHome"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/icgranja"
                android:background="@color/white"
                android:contentDescription="Ir a Inicio"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Granjas"
                android:textSize="10sp"
                android:textColor="@color/colorDivider"/>
        </LinearLayout>

        <!-- Botón 2 -->
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/navSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:background="@color/white"
                android:src="@drawable/icusersmonit"
                android:contentDescription="Usuarios"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuarios"
                android:textSize="10sp"
                android:textColor="@color/colorDivider"/>
        </LinearLayout>

        <!-- Botón 3 -->
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/navProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:background="@color/white"
                android:src="@drawable/icsoporte"
                android:contentDescription="Soporte"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soporte"
                android:textSize="10sp"
                android:textColor="@color/colorDivider"/>
        </LinearLayout>

        <!-- Botón 4 -->
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/navCloseSesion"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:background="@color/white"
                android:src="@drawable/iccerrarsesion"
                android:contentDescription="Cerrar sesión"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrar sesión"
                android:textSize="10sp"
                android:textColor="@color/colorDivider"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
