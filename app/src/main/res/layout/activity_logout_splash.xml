<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logout_splash_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebackground"
    tools:context=".LogoutSplashActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImageLogout"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logoacua"
        android:scaleType="fitCenter"
        android:contentDescription="Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/goodbyeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <!-- Goodbye message -->
    <TextView
        android:id="@+id/goodbyeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¡Hasta pronto!"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/logoImageLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/goodbyeSubText"/>
        
    <!-- Secondary goodbye message -->
    <TextView
        android:id="@+id/goodbyeSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gracias por usar Acuaterra"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/goodbyeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

