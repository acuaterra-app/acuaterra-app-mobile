<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RegisterModuleFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background4">

        <!-- ScrollView para el contenido principal -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/logoacua"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"/>

                <!-- Título -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar Módulo"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"/>

                <!-- Campo 1: Nombre del módulo -->
                <TextView
                    android:id="@+id/tvModuleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del módulo"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="24dp"/>

                <EditText
                    android:id="@+id/etModuleName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: Módulo 1"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"/>

                <!-- Campo 2: Ubicación -->
                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicación"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: Zona 2"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"/>

                <!-- Campo 3: Latitud -->
                <TextView
                    android:id="@+id/tvLatitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Latitud"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/etLatitude"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: 4.6097 (rango -90 a 90)"
                    android:inputType="numberDecimal|numberSigned"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:maxLength="10"
                    android:layout_marginTop="8dp"/>

                <!-- Campo 4: Longitud -->
                <TextView
                    android:id="@+id/tvLongitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Longitud"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/etLongitude"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: -74.0817 (rango -180 a 180)"
                    android:inputType="numberDecimal|numberSigned"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:maxLength="11"
                    android:layout_marginTop="8dp"/>

                <!-- Campo 5: Especie de pez -->
                <TextView
                    android:id="@+id/tvFishType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Especie de pez"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/etFishType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: Tilapia"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:maxLength="50"
                    android:layout_marginTop="8dp"/>

                <!-- Campo 6: Cantidad de pez -->
                <TextView
                    android:id="@+id/tvFishQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cantidad de peces"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/etFishQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: 50 peces"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:maxLength="5"
                    android:layout_marginTop="8dp"/>

                <!-- Campo 7: Edad de pez -->
                <TextView
                    android:id="@+id/tvFishAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edad de pez"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/etFishAge"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: 6 meses"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:maxLength="20"
                    android:layout_marginTop="8dp"/>

                <!-- Campo 8: Dimensiones del módulo -->
                <TextView
                    android:id="@+id/tvVolumeUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dimensiones del módulo"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/etVolumeUnit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: 2m x 1m x 1m"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:maxLength="30"
                    android:layout_marginTop="8dp"/>

                <!-- Botón Guardar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpdateModuloForm"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:elevation="4dp"
                    android:text="Actualizar Módulo"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <!-- Progress Bar for loading state -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"/>

                <!-- Botón Cancelar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelar"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/colorAccent"
                    android:elevation="4dp"
                    android:text="Cancelar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</FrameLayout>