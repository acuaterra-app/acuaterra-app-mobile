<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.SettingsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configuración"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_manage_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Administrar Usuarios"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_configure_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configurar Sistema"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_view_reports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Reportes"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:textAllCaps="false"/>

    <!-- Mensaje informativo sobre permisos -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota: Algunas funciones pueden estar restringidas según su rol de usuario."
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:textStyle="italic"
        android:gravity="center"/>

</LinearLayout>

