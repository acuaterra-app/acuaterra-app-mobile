<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    android:padding="0dp"

    tools:context=".views.farms.farm.modules.ModulesActivity">

    <!-- Barra de búsqueda -->
    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editTextSearchModule"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Buscar módulo por nombre"
            android:padding="10dp"
            android:background="@color/colorBackground"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"/>

        <!-- Botón de ordenación con icono -->
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/buttonSortModules"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/icbajar"
            android:contentDescription="Ordenar por fecha"/>
    </LinearLayout>

    <!-- Mensaje de carga o estado -->
    <TextView
        android:id="@+id/textViewModules"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Cargando datos..."
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/searchLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lista de módulos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewModules"
        android:layout_width="370dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewModules"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- Botón "Agregar módulo" -->


</androidx.constraintlayout.widget.ConstraintLayout>