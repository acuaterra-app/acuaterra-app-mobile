<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.farms.ListFarmsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Granjas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"/>

    <!-- Search bar to filter farms by name -->
    <EditText
        android:id="@+id/editTextSearchFarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar granja por nombre"
        android:padding="8dp" />

    <!-- Button to sort farms by creation date -->
    <Button
        android:id="@+id/buttonSortByDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ordenar por fecha de creaciÃ³n"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/textViewFarms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Cargando datos..."
        android:textSize="16sp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFarms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" />

</LinearLayout>

