<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homebackground"
    android:layout_marginTop="0dp"
    android:padding="0dp"
    >

    <!-- Contact Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="50dp">

        <!-- Support Image -->
        <ImageView
            android:id="@+id/imgSupport"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/icsoportetec"
            android:contentDescription="Support"
            android:layout_marginBottom="16dp"/>

        <!-- "Contact Support" Text -->
        <TextView
            android:id="@+id/txtSupportTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOPORTE TECNICO"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="16dp">

        <!-- Open WhatsApp Button -->
        <Button
            android:id="@+id/btnWhatsApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/colorAccent"
            android:paddingVertical="16dp"
            android:text="Abrir WhatsApp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawablePadding="8dp"
            android:gravity="center"/>

        <!-- Send Email Button -->
        <Button
            android:id="@+id/btnEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar Email"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingVertical="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:drawablePadding="8dp"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>

