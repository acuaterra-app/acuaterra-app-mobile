<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RegisterModuleFragment">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background4">

        <!-- ScrollView para el contenido principal -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/logoacua"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp" />

                <!-- Título -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrar Módulo"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp" />

                <!-- Campos de formulario -->
                <TextView
                    android:id="@+id/tvModuleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del módulo"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etModuleName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: Módulo 1"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicación"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: Zona 2"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvFishType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Latitud"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etFishType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: 20m"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvFishCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Longitud"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etFishCount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: 100m"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvGrowthTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Especie de pez"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etGrowthTime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: Tilapia"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvFishQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cantidad de peces"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etFishQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: 50"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvVolumeUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dimensiones del módulo"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etVolumeUnit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorBackground"
                    android:hint="Ej: 2m x 1m x 1m"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_marginTop="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegisterModulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:text="Guardar Módulo"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Cancelar"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>