<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:padding="1dp">


    <!-- Contenedor principal de contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="10dp"> <!-- Se da espacio para la barra de navegación -->

        <!-- Sección de bienvenida -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Imagen de usuario -->
            <ImageView
                android:id="@+id/userImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/usuario"
                android:contentDescription="Foto de usuario"
                android:layout_marginEnd="12dp"/>

            <!-- Texto de bienvenida -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/roboto"/>
        </LinearLayout>

        <!-- Título principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestión de Granjas"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/koulen"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- Contenedor de botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnListFarms"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="280dp"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="6dp"
                android:text="Listar Granjas"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/farmImage"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/famrsperson"
                android:contentDescription="Imagen de una granja"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

        </LinearLayout>

    </LinearLayout>


    <!-- Panel de navegación inferior -->

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@color/colorBackground"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <!-- Primer linear para granja icono -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Icono -->
            <ImageView
                android:id="@+id/navHome"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/icgranja"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>

            <!-- Texto debajo del icono -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Granjas"
                android:textSize="8sp"
                android:textColor="@color/colorDivider"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Segundo linear para granja home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/navSettings"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/logoacua"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menú"
                android:textSize="8sp"
                android:textColor="@color/colorDivider"
                android:gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/navProfile"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/icmodulo"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Módulos"
                android:textSize="8sp"
                android:textColor="@color/colorDivider"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
