<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@color/nav_background"
    android:elevation="8dp"
    android:outlineProvider="bounds"
    android:outlineSpotShadowColor="@color/nav_elevation_color"
    android:outlineAmbientShadowColor="@color/nav_elevation_color"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="8dp"
    android:stateListAnimator="@android:animator/fade_in">
    <!-- Granjas (Farms) Navigation Item -->
    <LinearLayout
        android:id="@+id/navFarms"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/nav_item_background">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ivNavIcon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="centerInside"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/icgranja"
                android:contentDescription="Ir a Granjas"/>
            <View
                android:id="@+id/indicator"
                android:layout_width="42dp"
                android:layout_height="3dp"
                android:layout_gravity="bottom"
                android:background="@color/nav_indicator_color"
                android:visibility="invisible"
                android:alpha="0.9"
                android:translationZ="2dp"
                android:animateLayoutChanges="true"/>
        <TextView
            android:id="@+id/tvNavText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Granjas"
            android:textSize="12sp"
            android:textColor="@drawable/nav_item_color_selector"
            android:layout_marginTop="4dp"/>
    <!-- Módulos Navigation Item -->
    <LinearLayout
        android:id="@+id/navModules"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/nav_item_background">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ivNavIcon_modules"
                android:src="@drawable/icmodulo"
                android:contentDescription="Ir a Módulos"/>
            <View
                android:id="@+id/indicator_modules"
            android:id="@+id/tvNavText_modules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Módulos"
